  EDUCATIONAL
  GOVERNMENT_AGENCY
  NON_PROFIT
  PARTNERSHIP
  PRIVATELY_HELD
  PUBLIC_COMPANY
  SELF_EMPLOYED
  SELF_OWNED
}

